{
    "name": "dhbwka-wwi-webprog-folien",
    "version": "1.0.0",
    "description": "Folienskript zur Vorlesung \"Webprogrammierung\" im Studiengang Wirtschaftsinformation an der DHBW Karlsruhe",
    "author": "Dennis Schulmeister-Zimolong",
    "license": "CC-BY-4.0",
    "homepage": "https://github.com/DennisSchulmeister/dhbwka-wwi-webprog-folien#readme",
    "bugs": {
        "url": "https://github.com/DennisSchulmeister/dhbwka-wwi-webprog-folien/issues"
    },
    "main": "index.js",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/DennisSchulmeister/dhbwka-wwi-webprog-folien.git"
    },
    "keywords": [
        "slideshow",
        "presentation",
        "lecture-slide.js",
        "template"
    ],
    "scripts": {
        "_build:static": "node scripts/build-static.mjs",
        "_build:webpack": "webpack --mode production",
        "_watch:static": "watch-run -p 'static/**' npm run build:static",
        "_webpack:serve": "webpack serve --mode development --static-directory build/",
        "clean": "node scripts/clean.js",
        "build": "run-s clean _build:static _build:webpack",
        "watch": "run-s clean _build:static _watch:static",
        "devserver": "run-p watch _webpack:serve",
        "publish": "scripts/publish.sh"
    },
    "config": {
        "src_dir": "src",
        "static_dir": "static",
        "build_dir": "build",
        "public_url": "",
        "replace_variables_extensions": ".htm; .html"
    },
    "devDependencies": {
        "@dschulmeis/lecture-slides.js": "^3.0.0",
        "@dschulmeis/ls-plugin-extra-tags": "^3.0.0",
        "@dschulmeis/ls-plugin-highlight.js": "^2.0.4",
        "css-loader": "^6.8.1",
        "email-link.js": "^1.0.1",
        "html-loader": "^4.2.0",
        "less": "^4.1.3",
        "less-loader": "^11.1.3",
        "mini-css-extract-plugin": "^2.7.6",
        "npm-run-all": "^4.1.5",
        "shelljs": "^0.8.5",
        "watch-run": "^1.2.5",
        "webpack": "^5.87.0",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^4.15.1"
    }
}
